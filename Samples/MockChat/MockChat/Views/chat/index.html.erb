<div class="post">
  <div class="title">
    <h2>Topic: <div class="subject" style="display:inline-block;"><%= view_data.session.name %></div></h2>
  </div>
  <p class="links">&nbsp; </p>
</div>
<div class="post">
  <% html.begin_form("add_message", "chat", FormMethod.post, { :class => "ajax-form" }) %>
  <div class="entry">
        <label for="message">Message:</label><br/>
        <textarea name="message" id="message" rows="4" ></textarea><br/>
  </div>
  <p class="right-aligned">
    <button type="submit">Send</button>
  </p>
  <% html.end_form %>
<hr />
  <div id='chat-list' class="entry">
    <% html.render_partial 'chat_list' %>
  </div>
  <p class="links">&nbsp; </p>
</div>

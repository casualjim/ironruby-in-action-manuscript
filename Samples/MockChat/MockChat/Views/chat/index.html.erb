<div class="post">
  <div class="title">
    <h2>Topic: <%= view_data.session.name %></h2>
  </div>
  <div id='chat-list' class="entry">
    <% html.render_partial 'chat_list' %>
  </div>
  <p class="links">&nbsp; </p>
</div>
<% html.begin_form("add_message", "chat") %>
<div class="post">
  <div class="entry">
    <label for="message">Message:</label><br/>
    <textarea name="message" id="message" rows="4" ></textarea><br/>
  </div>
  <p class="links right-aligned">
    <button type="submit">Send</button>
  </p>
</div>
<% html.end_form %>
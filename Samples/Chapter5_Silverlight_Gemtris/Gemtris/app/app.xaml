<UserControl 
	x:Class="System.Windows.Controls.UserControl"
	xmlns="http://schemas.microsoft.com/client/2007"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:gemtris="clr-namespace:Gemtris;assembly=Gemtris">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		
		<TextBlock Text="Gemtris" Grid.Row="0" Foreground="White" FontSize="30" HorizontalAlignment="Center" />
		
		<Grid x:Name="boardGrid" Grid.Row="1" Width="200" Height="320" VerticalAlignment="Top" />
		
	</Grid>

</UserControl>
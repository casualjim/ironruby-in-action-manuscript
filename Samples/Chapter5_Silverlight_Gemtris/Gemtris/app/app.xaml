<UserControl 
	x:Class="System.Windows.Controls.UserControl"
	xmlns="http://schemas.microsoft.com/client/2007"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:gemtris="clr-namespace:Gemtris;assembly=Gemtris">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		
		<TextBlock Text="Gemtris" Grid.Row="0" Foreground="White" FontSize="30" Margin="5" HorizontalAlignment="Center" />
		
		<Border BorderThickness="5" BorderBrush="Gray" Background="Black" Grid.Row="1" Padding="2" Width="214" Height="334" VerticalAlignment="Top">
			<Grid x:Name="boardGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
		</Border>
	</Grid>

</UserControl>
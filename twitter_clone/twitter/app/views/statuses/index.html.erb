<h1>Listing statuses</h1>

<table>
  <tr>
    <th>Favourited</th>
    <th>In reply to status</th>
    <th>In reply to user</th>
    <th>Source</th>
    <th>Source url</th>
    <th>Text</th>
    <th>Truncated</th>
  </tr>

<% for status in @statuses %>
  <tr>
    <td><%=h status.favourited %></td>
    <td><%=h status.in_reply_to_status_id %></td>
    <td><%=h status.in_reply_to_user_id %></td>
    <td><%=h status.source %></td>
    <td><%=h status.source_url %></td>
    <td><%=h status.text %></td>
    <td><%=h status.truncated %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Destroy', status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

